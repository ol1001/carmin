extends layout.pug

block content
  form.userSignUpForm(method='post', action='/signup', enctype='application/x-www-form-urlencoded')
    h4 Create Account:
    if exists
      .error
        | That user exists. Are you trying to 
        a(href="/login") Login
        | ?
    if invalid
      .error Please enter a valid email address and password.
    ul
      li
        label(for='email') Email
        input#email(name='email')
      li
        label(for='firstname') Firstname
        input#firstname(name='firstname')
      li
        label(for='lastname') Lastname
        input#lastname(name='lastname')
      li
        label(for='pass') Password
        input#pass(name='pass', type='password')
    ul.userAction
      li
        button(type='submit') Sign up
      li
        a(href="/")
         button.userCancel(type='button') Cancel

